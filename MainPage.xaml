    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dino.jpg"
                HeightRequest="185"
                WidthRequest="200"
                Aspect="AspectFit"
                />

            <Entry Placeholder="Ingrese el nombre del dinosaurio"
               HorizontalOptions="Center"
               WidthRequest="400"
               x:Name="eNombre"/>
            
            <Entry Placeholder="Ingrese su peso (kg)"
               HorizontalOptions="Center"
               WidthRequest="400"
               x:Name="ePeso"/>

            <Entry Placeholder="Ingrese su altura (mts)"
               HorizontalOptions="Center"
               WidthRequest="400"
               x:Name="eAltura"/>

            <Label
                Text="Datos:---"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                FontSize="20"
                x:Name="lbDatos"/>


            <Button
                x:Name="CounterBtn"
                Text="Calcular" 
                Clicked="OnCounterClicked"
                HorizontalOptions="Center"
                WidthRequest="350" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
